@{
  Layout = "_Layout";
}
@using PierresBakery.Models;
<h1>Vendors</h1>
@if(Model.Count == 0)
{
  <h2>No vendors have been added</h2>
}
@foreach (Vendor vendor in Model)
{
    <h3><a href="/vendors/@vendor.Id">@vendor.Name</a></h3>
}

<div class="links">
<h4><a href='/vendors/new'>Add a new vendor</a><h4>
<h4><a href="/">Return to homepage</a><h4>
</div>